  script.
    document.addEventListener('DOMContentLoaded', function() {
      const form = document.getElementById('demo-form');
      const resultsContainer = document.getElementById('demo-results');
      
      form.addEventListener('htmx:beforeRequest', function(evt) {
        // Reset the results container with a fresh DemoUpdate component
        resultsContainer.innerHTML = `
          <div class="demo-results">
            <div class="progress-container">
              <div class="progress-bar">
                <div class="progress-fill" style="width: 0%"></div>
              </div>
              <div class="progress-text">Initializing...</div>
            </div>
            <div class="steps-container">
              <div class="step" data-step="init">
                <div class="step-icon">ðŸš€</div>
                <div class="step-text">Starting website analysis...</div>
              </div>
            </div>
            <div class="results-container" style="display: none;"></div>
          </div>
        `;
      });
      
      form.addEventListener('htmx:afterRequest', function(evt) {
        const xhr = evt.detail.xhr;
        
        if (xhr.status === 200) {
          // Start SSE stream using GET endpoint
          const url = encodeURIComponent(form.url.value);
          const eventSource = new EventSource(`/demo-stream?url=${url}`);
          
          eventSource.onmessage = function(event) {
            try {
              const data = JSON.parse(event.data);
              
              // Trigger HTMX event for DemoUpdate component
              htmx.trigger(document.body, 'demoUpdate', { detail: data });
              
              if (data.error) {
                eventSource.close();
                return;
              }
              
              if (data.complete && data.data) {
                eventSource.close();
              }
            } catch (err) {
              console.error('Error parsing SSE data:', err);
            }
          };
          
          eventSource.onerror = function(err) {
            console.error('SSE error:', err);
            resultsContainer.innerHTML = `<div class="error">Connection error. Please try again.</div>`;
            eventSource.close();
          };
        }
      });
    });
    
