            img(style="margin-right:25px;" width="20" src="/images/icons/linkedin-brands-solid.svg" alt="LinkedIn")
          a(href="https://www.facebook.com/apro.aiseo/" target="_blank")
            img(style="margin-right:25px;" width="20" src="/images/icons/square-facebook-brands-solid.svg" alt="facebook")
          a(href="https://www.instagram.com/apro.ai" target="_blank")
            img(style="margin-right:25px;" width="20" src="/images/icons/square-instagram-brands-solid.svg" alt="Instagram")
          a(href="https://www.youtube.com/@apro-solutions" target="_blank")
            img(style="margin-right:25px;" width="20" src="/images/icons/square-youtube-brands-solid.svg" alt="Youtube")
          //- a(href="https://www.linkedin.com/company/a-pro-solutions-inc/" target="_blank")
            img(style="margin-right:25px;" src="/images/icons/square-x-twitter-brands-solid.svg" alt="X-Twitter")
          a(href="https://bsky.app/profile/apro-solutions.bsky.social" target="_blank")
            img(style="margin-right:25px;" width="20" src="/images/icons/square-bluesky-brands-solid.svg" alt="Bluesky")
