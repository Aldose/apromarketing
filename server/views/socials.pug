extends layout
block append head
  title= socialMediaLinks.pageSettings.title
  meta(name='description', content=socialMediaLinks.pageSettings.metaDescription)
  link(rel='canonical', href=`https://a-pro.ai`+(lang != 'en' ? '/' + lang : '') + `/socials`)
  meta(name='robots', content='index, follow')
  meta(property='og:title', content=socialMediaLinks.pageSettings.ogTitle)
  meta(property='og:description', content=socialMediaLinks.pageSettings.ogDescription)
  meta(property='og:url', content=`https://a-pro.ai`+(lang != 'en' ? '/' + lang : '') + `/socials`)
  meta(property='og:image', content=socialMediaLinks.pageSettings.ogImage)
  meta(property='og:image:width', content='1200')
  meta(property='og:image:height', content='630')
  meta(property='og:locale', content=lang)

block content
  link(rel="stylesheet" href="/css/pages/index.css")
  .container
    section.hero-section
      .row
        .col-12.text-center
          h1.mb-0.poppins-bold= socialMediaLinks.pageSettings.heroTitle
          h1.green-underline= socialMediaLinks.pageSettings.heroSubtitle
          h3.text-center.poppins-bold.q-mb-lg= socialMediaLinks.pageSettings.heroDescription

    .mt-3
      h2.mb-5.poppins-bold.text-center(style="font-size:60px")= socialMediaLinks.pageSettings.sectionTitle
      .row
        // Dynamic social media platforms from config file
        each platform in socialMediaLinks.platforms
          .col-12.col-sm-6.col-md-6.col-lg-6.col-xl-4.mb-3.px-2
            .card.dash-card.h-100.p-4.text-center(style=platform.cardColor ? `background-color: ${platform.cardColor};` : '')
              .icon.mx-auto.mb-3
                i(class=`${platform.iconClass} fa-3x${platform.name === 'YouTube' ? ' text-danger' : platform.name === 'Bluesky' ? ' text-info' : platform.name === 'LinkedIn' || platform.name === 'Facebook' || platform.name === 'Instagram' ? ' text-primary' : ''}`, style=platform.textColor ? `color: ${platform.textColor};` : '')
              h4.poppins-bold(style=platform.textColor ? `color: ${platform.textColor};` : '')= platform.name
              p(style=platform.textColor ? `color: ${platform.textColor};` : '')= platform.description
              a(class=platform.buttonClass, href=platform.url, target=platform.url.startsWith('http') ? '_blank' : '', rel=platform.url.startsWith('http') ? 'noopener noreferrer' : '').mt-3
                i(class=platform.iconClass).me-2
                | #{platform.buttonText}

        // Static Newsletter card (hardcoded)
        .col-12.col-sm-6.col-md-6.col-lg-6.col-xl-4.mb-3.px-2
          .card.dash-card.h-100.p-4.text-center(style="background-color: var(--primary-color);")
            .icon.mx-auto.mb-3
              i.fas.fa-envelope.fa-3x(style="color: black;")
            h4.poppins-bold(style="color: black;") Newsletter
            p(style="color: black;") Get exclusive insights, tips, and updates delivered directly to your inbox every week.
            a.btn.btn-dark.mt-3(href="/#newsletter")
              i.fas.fa-envelope.me-2
              | Subscribe

    // Contact CTA Section
    section.text-center.mt-5.mb-5.p-5(style="background-color: var(--primary-color); border-radius: 10px;")
      h2.poppins-bold.mb-4(style="color: black;") Want Direct Contact?
      p.lead(style="color: black;") Have questions or want to discuss your marketing needs? We're here to help!
      .mt-4
        a.btn.btn-dark.btn-lg.me-3(href="/#contact") Contact Us
        a.btn.btn-outline-dark.btn-lg(href="/pricing") View Our Services